@model AdoUsingCRUDOperation.DAL.Mobile
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@using (Html.BeginForm())
{
    <div class="mb-3">
        <label> Mobile Name</label>
        @Html.TextBoxFor(model=>model.Mobile_Name)
